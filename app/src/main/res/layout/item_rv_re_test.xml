<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintDimensionRatio="1:1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:background="@drawable/border_round_rectangle_white_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_title"
        android:textColor="@color/blue_grey_22"
        android:textSize="16dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/gmarketsansbold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/part_n"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_title_sub"
        android:layout_marginTop="8dp"
        tools:text="Read~"
        android:textColor="@color/blue_grey_22"
        android:textSize="12dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/gmarketsansmedium"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_count"
        android:textColor="@color/blue_grey_22"
        android:textSize="12dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/gmarketsansmedium"
        app:layout_constraintTop_toBottomOf="@id/text_title_sub"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        tools:text="Q.1~2"/>



</androidx.constraintlayout.widget.ConstraintLayout>